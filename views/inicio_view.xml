        <field name="model">garaje.gv</field>
        <field name="arch" type="xml">
            <form string="garaje_gv_inicio" create="false" edit="false">
                <group><h3 class="border-bottom" style="color: #65639e;"><i class="fa fa-home"></i> Inicio</h3></group>
                <group>
                  <group>
                    <button  string="Mecánicos" type="action" name="%(garaje_gv_mecanico_action_window)d" style="width:100%;height:200px;font-size:2em; background:color(srgb 0.4192 0.4178 0.509);color:white;border-radius: 10px;"/>
                  </group>  
                  <group>
                    <button  string="Consumibles" type="action" name="%(garaje_gv_consumible_action_window)d" style="width:100%;height:200px;font-size:2em;background:color(srgb 0.4192 0.4178 0.509);color:white; border-radius: 10px;"/>
                  </group>
                </group> 
                <group>
                  <group>
                    <button  string="Revisiones" type="action" name="%(garaje_gv_revision_action_window)d" style="width:100%;height:200px;font-size:2em;background:color(srgb 0.4192 0.4178 0.509);color:white;border-radius: 10px;"/>
                  </group>  
                  <group>
                    <button  string="Vehículos" type="action" name="%(garaje_gv_vehiculo_action_window)d" style="width:100%;height:200px;font-size:2em;background:color(srgb 0.4192 0.4178 0.509);color:white;border-radius: 10px;"/>
                  </group>
                </group>   
            </form>
        </field>
    </record>

